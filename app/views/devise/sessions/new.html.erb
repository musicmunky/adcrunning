<h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "rails_form" }) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, { autocomplete: "email", autofocus: true, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, { autocomplete: "off", class: "form-control" } %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me, { class: "form-check-input", style: "margin-left:0px;" } %>
      <%= f.label :remember_me, { style: "margin-left:20px;" } %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", { class: "btn btn-primary", onclick: "return checkScheduleForm();" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
