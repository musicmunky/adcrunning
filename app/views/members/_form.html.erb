<%= form_with(model: member, local: true, html: { class: "rails_form" }) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, { id: :member_first_name, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, { id: :member_last_name, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, { id: :member_email, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :school %>
    <%= form.text_field :school, { id: :member_school, class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, { id: :member_age, class: "form-control" } %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", { class: "btn btn-dark", onclick: "return checkScheduleForm();" } %>
  </div>
<% end %>
