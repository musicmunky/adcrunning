<p id="notice"><%= notice %></p>

<h3>Members</h3>

<% cspan = 1 %>
<% if user_signed_in? %>
    <% cspan = 3 %>
<% end %>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>School</th>
      <th>Age</th>
      <th colspan="<%= cspan %>"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= member.school %></td>
        <td><%= member.age %></td>
        <td><%= link_to 'Show', member %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Member', new_member_path %>
<% end %>